<resources>

    <!-- Base application theme. -->
    <style name="ThemeLight" parent="Theme.AppCompat.Light">

    </style>
    <style name="MyActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/fondo_contenedor_acciones</item>
        <item name="background">@color/fondo_contenedor_acciones</item>
        <item name="titleTextStyle">@style/MyActionBar.TitleTextStyle</item>
    </style>

    <style name="MyActionBar.TitleTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/texto_botones_contenedor_acciones</item>
    </style>

    <style name="AppTheme"
        parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar2</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar2</item>
        <item name="colorPrimary">@color/fondo_status_bar</item>
        <item name="colorPrimaryDark">@color/fondo_status_bar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar2"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/fondo_contenedor_acciones</item>

        <!-- Support library compatibility -->
        <item name="background">@color/fondo_contenedor_acciones</item>
    </style>
    <style name="AppDialog" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/fondo_mini_actividades</item>
    </style>

    <style name="CompatDarkActionBarTheme" parent="android:Theme.Holo.Light" />

    <style name="CustomShowcaseTheme" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#D900A621</item>
        <item name="sv_showcaseColor">#00801A</item>
        <item name="sv_buttonText">@string/boton_ayuda</item>
        <item name="sv_buttonBackgroundColor">#1B5E20</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle</item>
        <item name="sv_detailTextAppearance">@style/CustomText2</item>
    </style>

    <style name="CustomShowcaseTheme2" parent="ShowcaseView">
        <item name="sv_backgroundColor">#e51249d9</item>
        <item name="sv_showcaseColor">#25467A</item>
        <item name="sv_buttonText">Close</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle2</item>
        <item name="sv_detailTextAppearance">@style/CustomText2</item>
    </style>

    <style name="CustomTitle" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">#fff</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="CustomTitle2" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">#fff</item>
    </style>

    <style name="CustomText2" parent="TextAppearance.ShowcaseView.Detail.Light">
        <item name="android:textColor">#ffff</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

</resources>
