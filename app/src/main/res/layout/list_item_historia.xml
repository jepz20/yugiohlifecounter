<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:background="@color/puntos_sanos"
        android:minHeight="@dimen/abc_action_button_min_height_material">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:textSize="16sp"
            android:textColor="@color/texto_contador"
            android:id="@+id/tvNumeroJuegoLog"
            android:text="Duelo #1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingBottom="@dimen/activity_vertical_margin">
            <hn.jepz.www.yugiohlifecounter.AutoResizeTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="30sp"
                android:textColor="@color/texto_contador"
                android:id="@+id/tvEncabezadoJ1"
                android:singleLine="true"
                android:gravity="center"
                android:text="Jugador 1"/>
            <hn.jepz.www.yugiohlifecounter.AutoResizeTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="30sp"
                android:singleLine="true"
                android:textColor="@color/texto_contador"
                android:id="@+id/tvEncabezadoJ2"
                android:gravity="center"
                android:text="Jugador 2 "/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView  android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvLogJ1"
            android:layout_weight="1"
            android:textSize="30sp"
            android:gravity="center_horizontal"
            android:text="8000"/>
        <TextView android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvLogJ2"
            android:textSize="30sp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="8000"/>
    </LinearLayout>
</LinearLayout>