<resources>

    <!-- Base application theme. -->
    <style name="ThemeLight"
        parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/fondo_contenedor_acciones</item>
        <item name="background">@color/fondo_contenedor_acciones</item>
        <item name="colorPrimary">@color/fondo_contenedor_acciones</item>
        <item name="android:titleTextStyle">@style/MyActionBar.TitleTextStyle</item>
    </style>

    <style name="MyActionBar.TitleTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/texto_botones_contenedor_acciones</item>
    </style>

</resources>
